<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector=":is(Panel).items-valign-center > :is(Control)">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style Selector=":is(Panel).items-valign-top > :is(Control)">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
    <Style Selector=":is(Panel).items-valign-bottom > :is(Control)">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>
    
    <Style Selector=":is(Panel).items-halign-center > :is(Control)">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector=":is(Panel).items-halign-left > :is(Control)">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style Selector=":is(Panel).items-halign-right > :is(Control)">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>
</Styles>
