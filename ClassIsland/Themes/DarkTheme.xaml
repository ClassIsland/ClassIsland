<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Rainy" Color="DeepSkyBlue"/>
    <DropShadowEffect x:Key="LuminousClass"
                      BlurRadius="2"
                      ShadowDepth="0"
                      Color="#FF0" />

    <!-- AQI 颜色 -->
    <SolidColorBrush x:Key="AqiLevel1Brush">MediumSeaGreen</SolidColorBrush>
    <SolidColorBrush x:Key="AqiLevel2Brush">Yellow</SolidColorBrush>
    <SolidColorBrush x:Key="AqiLevel3Brush">Orange</SolidColorBrush>
    <SolidColorBrush x:Key="AqiLevel4Brush">IndianRed</SolidColorBrush>
    <SolidColorBrush x:Key="AqiLevel5Brush">DarkRed</SolidColorBrush>
    <SolidColorBrush x:Key="AqiLevel6Brush">MediumPurple</SolidColorBrush>

    <!-- 天气预警颜色 -->
    <SolidColorBrush x:Key="WeatherAlertLevelBlueBrush">#03c4fa</SolidColorBrush>
    <SolidColorBrush x:Key="WeatherAlertLevelYellowBrush">#fcd214</SolidColorBrush>
    <SolidColorBrush x:Key="WeatherAlertLevelOrangeBrush">#f79d16</SolidColorBrush>
    <SolidColorBrush x:Key="WeatherAlertLevelRedBrush">#f71631</SolidColorBrush>
</ResourceDictionary>