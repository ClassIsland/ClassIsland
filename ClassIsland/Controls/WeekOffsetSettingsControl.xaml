<UserControl x:Class="ClassIsland.Controls.WeekOffsetSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ci="http://classisland.tech/schemas/xaml/core"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="调整本周的多周轮换位置。" Style="{StaticResource MaterialDesignBody2TextBlock}"
                   Margin="12 12 12 8"/>
        
        <ScrollViewer MaxHeight="350">
            <StackPanel x:Name="ContentPanel" Margin="12 -4 12 0"/>
        </ScrollViewer>

        <WrapPanel Margin="12 8 12 10">
            <Button HorizontalAlignment="Left" Click="ButtonFinish_OnClick" Margin="0 0 6 0">
                <ci:IconText Kind="Check" Text="应用" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Click="ButtonClear_OnClick"
                    ToolTip="使用学期开始日期重置所有多周轮换位置。">
                <ci:IconText Kind="Refresh" Text="重置"/>
            </Button>
        </WrapPanel>
    </StackPanel>
</UserControl>