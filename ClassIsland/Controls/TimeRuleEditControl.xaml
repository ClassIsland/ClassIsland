<UserControl x:Class="ClassIsland.Controls.TimeRuleEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ClassIsland.Controls"
             xmlns:ci="http://classisland.tech/schemas/xaml/core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel DataContext="{Binding ViewModel, RelativeSource={RelativeSource AncestorType=controls:TimeRuleEditControl}}">
        <Separator Margin="0 20 0 8" />
        <ci:IconText Kind="LabelMultipleOutline" Text="触发规则" Margin="0 0 0 8" />
        <TextBlock Text="课表只有在规则全部满足时才会生效。" TextWrapping="Wrap" />

        <TextBlock Text="当今天是：" Margin="0 8 0 0" />
        <ci:NonScrollingListBox
            Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}"
            SelectedIndex="{Binding EditingTimeRule.WeekDay}">
            <ListBoxItem Content="周日" />
            <ListBoxItem Content="周一" />
            <ListBoxItem Content="周二" />
            <ListBoxItem Content="周三" />
            <ListBoxItem Content="周四" />
            <ListBoxItem Content="周五" />
            <ListBoxItem Content="周六" />
        </ci:NonScrollingListBox>

        <TextBlock Text="当本周是：" Margin="0 8 0 0" />
        <ci:NonScrollingListBox x:Name="DivListBox"
            ItemsSource="{Binding WeekCountDivOptions}"
            SelectedIndex="{Binding EditingTimeRule.WeekCountDiv}"
            Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}"/>

        <StackPanel>
            <TextBlock Text="每轮周数：" Margin="0 8 0 0" />
            <ci:NonScrollingListBox x:Name="DivTotalListBox"
                ItemsSource="{Binding WeekCountDivTotalOptions}"
                SelectedIndex="{Binding EditingTimeRule.WeekCountDivTotal}"
                Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}"/>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ViewModel.Settings.MultiWeekRotationMaxCycle, RelativeSource={RelativeSource AncestorType=controls:TimeRuleEditControl}}" Value="2"/>
                                <Condition Binding="{Binding ViewModel.TimeRule.WeekCountDivTotal, RelativeSource={RelativeSource AncestorType=controls:TimeRuleEditControl}}" Value="2"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
        </StackPanel>
    </StackPanel>
</UserControl>