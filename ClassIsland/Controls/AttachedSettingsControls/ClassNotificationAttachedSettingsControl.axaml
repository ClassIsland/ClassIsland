<ci:AttachedSettingsControlBase x:TypeArguments="attachedSettings:ClassNotificationAttachedSettings"
                                x:Class="ClassIsland.Controls.AttachedSettingsControls.ClassNotificationAttachedSettingsControl"
                                xmlns="https://github.com/avaloniaui"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:ClassIsland.Controls.AttachedSettingsControls"
                                xmlns:controls1="clr-namespace:ClassIsland.Core.Controls;assembly=ClassIsland.Core"
                                xmlns:ci="http://classisland.tech/schemas/xaml/core"
                                xmlns:attachedSettings="clr-namespace:ClassIsland.Models.AttachedSettings"
                                xmlns:controls2="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
                                xmlns:profile="clr-namespace:ClassIsland.Shared.Models.Profile;assembly=ClassIsland.Shared"
                                xmlns:enums="clr-namespace:ClassIsland.Core.Enums;assembly=ClassIsland.Core"
                                mc:Ignorable="d"
                                d:DesignHeight="450" d:DesignWidth="800"
                                Loaded="Control_OnLoaded">
    <TabControl Classes="compact" Padding="0"
                x:Name="MasterTabControl"
                DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:ClassNotificationAttachedSettingsControl}}">
        <TabItem Header="准备上课">
            <TabItem.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.Or}">
                    <Binding Path="AttachedTimePointTimeType" Converter="{x:Static ObjectConverters.Equal}">
                        <Binding.ConverterParameter>
                            <x:Int32>-1</x:Int32>
                        </Binding.ConverterParameter>
                    </Binding>
                    <Binding Path="AttachedTimePointTimeType" Converter="{x:Static ObjectConverters.Equal}">
                        <Binding.ConverterParameter>
                            <x:Int32>0</x:Int32>
                        </Binding.ConverterParameter>
                    </Binding>
                </MultiBinding>
            </TabItem.IsVisible>
            <StackPanel Spacing="4">
                <!-- 启用准备上课提醒 -->
                <CheckBox IsChecked="{Binding Settings.IsClassOnPreparingNotificationEnabled}"
                          Content="启用准备上课提醒。" />

                <!-- 准备上课提醒时间 -->
                <controls1:Field Suffix="秒" Label="准备上课提醒时间">
                    <controls2:NumberBox Maximum="3600" Minimum="0"
                                         Value="{Binding Settings.ClassPreparingDeltaTime, Converter={x:Static ci:NotNaNConverter.Instance}}"
                                         SpinButtonPlacementMode="Compact" />
                </controls1:Field>
                
                <!-- 准备上课遮罩文字 -->
                <controls1:Field Label="准备上课遮罩文字">
                    <TextBox Text="{Binding Settings.ClassOnPreparingMaskText}" />
                </controls1:Field>

                <!-- 准备上课提醒文字 -->
                <controls1:Field Label="准备上课提醒文字">
                    <TextBox Text="{Binding Settings.ClassOnPreparingText}"
                             Watermark="（禁用）" />
                </controls1:Field>
                
            </StackPanel>
        </TabItem>
        <TabItem Header="上课">
            <TabItem.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.Or}">
                    <Binding Path="AttachedTimePointTimeType" Converter="{x:Static ObjectConverters.Equal}">
                        <Binding.ConverterParameter>
                            <x:Int32>-1</x:Int32>
                        </Binding.ConverterParameter>
                    </Binding>
                    <Binding Path="AttachedTimePointTimeType" Converter="{x:Static ObjectConverters.Equal}">
                        <Binding.ConverterParameter>
                            <x:Int32>0</x:Int32>
                        </Binding.ConverterParameter>
                    </Binding>
                </MultiBinding>
            </TabItem.IsVisible>
            <StackPanel Spacing="4">
                <!-- 启用上课提醒 -->
                <CheckBox IsChecked="{Binding Settings.IsClassOnNotificationEnabled}"
                          Content="启用上课提醒。" />

                <!-- 上课遮罩文字 -->
                <controls1:Field Label="上课遮罩文字">
                    <TextBox Text="{Binding Settings.ClassOnMaskText}" />
                </controls1:Field>

            </StackPanel>
        </TabItem>
        <TabItem Header="课间休息">
            <TabItem.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.And}">
                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                        <Binding Path="AttachedTimePointTimeType" Converter="{x:Static ObjectConverters.Equal}">
                            <Binding.ConverterParameter>
                                <x:Int32>-1</x:Int32>
                            </Binding.ConverterParameter>
                        </Binding>
                        <Binding Path="AttachedTimePointTimeType" Converter="{x:Static ObjectConverters.Equal}">
                            <Binding.ConverterParameter>
                                <x:Int32>1</x:Int32>
                            </Binding.ConverterParameter>
                        </Binding>
                    </MultiBinding>
                    <Binding Path="Target" Converter="{x:Static ObjectConverters.NotEqual}">
                        <Binding.ConverterParameter>
                            <enums:AttachedSettingsTargets>Subject</enums:AttachedSettingsTargets>
                        </Binding.ConverterParameter>
                    </Binding>
                </MultiBinding>
            </TabItem.IsVisible>
            <StackPanel Spacing="4">
                <!-- 启用下课提醒 -->
                <CheckBox IsChecked="{Binding Settings.IsClassOffNotificationEnabled}"
                          Content="启用下课提醒。" />

                <!-- 下课提醒文字 -->
                <controls1:Field Label="下课提醒文字">
                    <TextBox Text="{Binding Settings.ClassOffOverlayText}"
                             Watermark="（禁用）" />
                </controls1:Field>
            </StackPanel>
        </TabItem>
        
    </TabControl>
</ci:AttachedSettingsControlBase>