<ci:ActionSettingsControlBase x:Class="ClassIsland.Controls.ActionSettingsControls.AppRestartActionSettingsControl"
                              x:TypeArguments="actions:AppRestartActionSettings"
                              d:DataContext="{d:DesignInstance Type=local:AppRestartActionSettingsControl}"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:ci="http://classisland.tech/schemas/xaml/core"
                              xmlns:actions="clr-namespace:ClassIsland.Models.Actions"
                              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:ClassIsland.Controls.ActionSettingsControls"
                              xmlns:controls="clr-namespace:ClassIsland.Controls"
                              mc:Ignorable="d"
                              d:DesignHeight="450"
                              d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <CheckBox IsChecked="{Binding Settings.Value}" Content="静默重启"></CheckBox>
        
    </Grid>
</ci:ActionSettingsControlBase>
