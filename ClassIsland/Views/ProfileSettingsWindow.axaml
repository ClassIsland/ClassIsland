                                                                        VerticalAlignment="Center">
                                                                <ci:FluentIcon Classes="ClassTableTagIcon"
                                                                               Classes.IsEnabled="{Binding Value.IsEnabled}"
                                                                               Classes.IsOverlay="{Binding Value.IsOverlay}">
                                                                    <ci:FluentIcon.Styles>
                                                                        <Style
                                                                            Selector="ci|FluentIcon.ClassTableTagIcon">
                                                                            <Setter Property="Glyph" Value="&#xF180;" />
                                                                            <Style Selector="^.IsEnabled">
                                                                                <Setter Property="Glyph"
                                                                                    Value="&#xF17E;" />
                                                                            </Style>
                                                                            <Style Selector="^.IsOverlay">
                                                                                <Setter Property="Glyph"
                                                                                    Value="&#xEA2F;" />
                                                                            </Style>
                                                                        </Style>
                                                                    </ci:FluentIcon.Styles>
                                                                </ci:FluentIcon>

                                                                <TextBlock Margin="2 0 0 0"
                                                                           Text="{Binding Value.TimeRule.WeekDay, Converter={StaticResource WeekIndexToWeekStringConverter}}">
                                                                    <TextBlock.IsVisible>
                                                                        <MultiBinding
                                                                            Converter="{x:Static BoolConverters.And}">
                                                                            <Binding Path="Value.IsEnabled" />
                                                                            <Binding Path="!Value.IsOverlay" />
                                                                        </MultiBinding>
                                                                    </TextBlock.IsVisible>
                                                                </TextBlock>

                                                                <TextBlock Margin="2 0 0 0">
                                                                    <TextBlock.Resources>
                                                                        <system:Int32 x:Key="Zero">0</system:Int32>
                                                                    </TextBlock.Resources>

                                                                    <TextBlock.IsVisible>
                                                                        <MultiBinding
                                                                            Converter="{x:Static BoolConverters.And}">
                                                                            <Binding Path="Value.TimeRule.WeekCountDiv"
                                                                                Converter="{x:Static ObjectConverters.NotEqual}"
                                                                                ConverterParameter="{StaticResource Zero}" />
                                                                            <Binding Path="Value.IsEnabled" />
                                                                            <Binding Path="!Value.IsOverlay" />
                                                                        </MultiBinding>
                                                                    </TextBlock.IsVisible>

                                                                    <Run Text="{Binding Value.TimeRule.WeekCountDiv}" />
                                                                    <Run Text="/" />
                                                                    <Run
                                                                        Text="{Binding Value.TimeRule.WeekCountDivTotal}" />
                                                                    <Run Text="周" />
                                                                </TextBlock>

                                                                <TextBlock Margin="2 0 0 0" Padding="0 0 4 0"
                                                                           Text="临时层"
                                                                           IsVisible="{Binding Value.IsOverlay}"
                                                                           FontWeight="Bold" FontStyle="Italic" />
                                                            </StackPanel>
                                                        </Border>
                                                    </WrapPanel>

                                                    <WrapPanel Orientation="Horizontal">
                                                        <!-- 课表群 -->
                                                        <Border MinWidth="20" Height="24" CornerRadius="12"
                                                                Margin="2 0" Padding="8 0"
                                                                VerticalAlignment="Center"
                                                                Classes="ClassTableTag l-secondary"
                                                                ToolTip.Tip="课表群"
                                                                DataContext="{Binding Value.AssociatedGroup, Converter={StaticResource ClassPlanGroupIdToClassPlanGroupConverter}}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        VerticalAlignment="Center">
                                                                <ci:FluentIcon Glyph="&#xE92F;" />

                                                                <TextBlock VerticalAlignment="Center"
                                                                           Margin="4 0 0 0"
                                                                           Text="{Binding Name}" />
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- 时间表 -->
                                                        <Border MinWidth="20" Height="24" CornerRadius="12"
                                                                Margin="2 0" Padding="8 0"
                                                                VerticalAlignment="Center"
                                                                ToolTip.Tip="时间表"
                                                                Classes="ClassTableTag l-secondary"
                                                                Classes.IsWrong="{Binding Value.TimeLayoutId, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static system:Guid.Empty}}">
                                                            <StackPanel Orientation="Horizontal"
                                                                        VerticalAlignment="Center">
                                                                <ci:FluentIcon Glyph="&#xF0EB;" />

                                                                <TextBlock VerticalAlignment="Center"
                                                                           Margin="4 0 0 0"
                                                                           Classes="ClassTableTimeLayoutTagText"
                                                                           Classes.IsWrong="{Binding Value.TimeLayoutId, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static system:Guid.Empty}}">
                                                                    <TextBlock.Styles>
                                                                        <Style
                                                                            Selector="TextBlock.ClassTableTimeLayoutTagText">
                                                                            <Setter Property="Text"
                                                                                Value="{Binding Value.TimeLayout.Name}" />
                                                                            <Style Selector="^.IsWrong">
                                                                                <Setter Property="Text" Value="？？？" />
                                                                            </Style>
                                                                        </Style>
                                                                    </TextBlock.Styles>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Border>
                                                    </WrapPanel>
                                                </WrapPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                                <GridSplitter Grid.Column="1" Margin="2 0" />
                                <!-- 课表编辑区域 -->

                                <ci:Emptiable Grid.Column="2" Data="{Binding ViewModel.SelectedClassPlan}"
                                              IsDirectContentMode="True"
                                              IsEnabled="{Binding !ViewModel.ManagementService.Policy.DisableProfileClassPlanEditing}">
                                    <Grid Grid.Column="2" RowDefinitions="Auto,*,Auto">
                                        <controls:CommandBar Grid.Row="0" DefaultLabelPosition="Right"
                                                             Classes="hide-popup-indicator">
                                            <controls:CommandBar.PrimaryCommands>
                                                <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xe9e4;}"
