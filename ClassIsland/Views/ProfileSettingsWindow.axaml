                                        <Separator Margin="0 20 0 8" />
                                        <ci:IconText Glyph="&#xEF2B;" Text="更多选项" Margin="0 0 0 8" />
                                        <ItemsControl
                                            ItemsSource="{x:Static services:IAttachedSettingsHostService.SubjectSettingsAttachedSettingsControls}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ci:AttachedSettingsControlPresenter ControlInfo="{Binding}"
                                                        TargetObject="{Binding ViewModel.SelectedSubject, RelativeSource={RelativeSource FindAncestor, AncestorType=views:ProfileSettingsWindow}}">
                                                        <ci:AttachedSettingsControlPresenter.ContentId>
                                                            <MultiBinding
                                                                Converter="{StaticResource SubjectDictionaryKeyFinderMultiConverter}"
                                                                Mode="OneWay">
                                                                <Binding Path="SelectedItem"
                                                                         ElementName="DataGridSubjects" />
                                                                <Binding
                                                                    Path="ViewModel.ProfileService.Profile.Subjects"
                                                                    RelativeSource="{RelativeSource FindAncestor, AncestorType=views:ProfileSettingsWindow}" />
                                                            </MultiBinding>
                                                        </ci:AttachedSettingsControlPresenter.ContentId>
                                                    </ci:AttachedSettingsControlPresenter>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </ci:Emptiable>

                    </Grid>
                </TabItem>
                <TabItem Header="已禁止" IsVisible="{Binding ViewModel.ManagementService.Policy.DisableProfileEditing}">
                    <ci:Empty Text="您的组织已禁用档案编辑功能。"
                              Icon="{ci:FluentIconSource &#xee0f;, FontSize=48}"/>
                </TabItem>
                <TabItem Header="调课">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" MinWidth="250" MaxWidth="400"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <controls:CommandBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                             Classes="hide-popup-indicator"
                                             DefaultLabelPosition="Right">
                            <controls:CommandBar.PrimaryCommands>
                                <controls:CommandBarButton Click="ButtonRefreshScheduleAdjustmentView_OnClick" 
                                                           IconSource="{ci:FluentIconSource &#xE0B5;}"
                                                           Label="刷新"
                                                           IsEnabled="{Binding ViewModel.IsInScheduleSwappingMode, Converter={StaticResource InvertBooleanConverter}}"/>
                                <controls:CommandBarSeparator>
                                    <controls:CommandBarSeparator.IsVisible>
                                        <Binding Path="#ScheduleAdjustmentTabControl.SelectedIndex"
                                                 Converter="{x:Static ObjectConverters.Equal}">
                                            <Binding.ConverterParameter>
                                                <system:Int32>0</system:Int32>
                                            </Binding.ConverterParameter>
                                        </Binding>
                                    </controls:CommandBarSeparator.IsVisible>
                                </controls:CommandBarSeparator>
                                <controls:CommandBarButton Click="ButtonEditClassInfoTemp_OnClick"
                                                           IconSource="{ci:FluentIconSource &#xE7C9;}"
                                                           Label="修改课程"
                                                           IsEnabled="{Binding ViewModel.IsInScheduleSwappingMode, Converter={StaticResource InvertBooleanConverter}}">
                                    <controls:CommandBarButton.IsVisible>
                                        <Binding Path="#ScheduleAdjustmentTabControl.SelectedIndex"
                                                 Converter="{x:Static ObjectConverters.Equal}">
                                            <Binding.ConverterParameter>
                                                <system:Int32>0</system:Int32>
                                            </Binding.ConverterParameter>
                                        </Binding>
                                    </controls:CommandBarButton.IsVisible>
                                </controls:CommandBarButton>
                                <controls:CommandBarButton Click="ButtonSwapSchedule_OnClick" 
                                                           IconSource="{ci:FluentIconSource &#xE15F;}"
                                                           Label="交换课程"
                                                           IsEnabled="{Binding ViewModel.IsInScheduleSwappingMode, Converter={StaticResource InvertBooleanConverter}}">
                                    <controls:CommandBarButton.IsVisible>
                                        <Binding Path="#ScheduleAdjustmentTabControl.SelectedIndex"
                                                 Converter="{x:Static ObjectConverters.Equal}">
                                            <Binding.ConverterParameter>
                                                <system:Int32>0</system:Int32>
                                            </Binding.ConverterParameter>
                                        </Binding>
                                    </controls:CommandBarButton.IsVisible>
                                </controls:CommandBarButton>
                                <controls:CommandBarButton Click="ButtonCancelClassSwap_OnClick" 
                                                           IconSource="{ci:FluentIconSource &#xE671;}"
                                                           Label="取消"
                                                           IsEnabled="{Binding !ViewModel.IsInScheduleSwappingMode, Converter={StaticResource InvertBooleanConverter}}">
                                    <controls:CommandBarButton.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="#ScheduleAdjustmentTabControl.SelectedIndex"
                                                     Converter="{x:Static ObjectConverters.Equal}">
                                                <Binding.ConverterParameter>
                                                    <system:Int32>0</system:Int32>
                                                </Binding.ConverterParameter>
                                            </Binding>
                                            <Binding Path="ViewModel.IsInScheduleSwappingMode"/>
                                        </MultiBinding>
                                    </controls:CommandBarButton.IsVisible>
                                </controls:CommandBarButton>
                                <controls:CommandBarButton Click="ButtonSwapScheduleComplete_OnClick" 
                                                           IconSource="{ci:FluentIconSource &#xE424;}"
                                                           Label="完成交换"
                                                           IsEnabled="{Binding !ViewModel.IsInScheduleSwappingMode, Converter={StaticResource InvertBooleanConverter}}">
                                    <controls:CommandBarButton.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="#ScheduleAdjustmentTabControl.SelectedIndex"
                                                     Converter="{x:Static ObjectConverters.Equal}">
                                                <Binding.ConverterParameter>
                                                    <system:Int32>0</system:Int32>
                                                </Binding.ConverterParameter>
                                            </Binding>
                                            <Binding Path="ViewModel.IsInScheduleSwappingMode"/>
                                        </MultiBinding>
                                    </controls:CommandBarButton.IsVisible>
                                </controls:CommandBarButton>
                                <controls:CommandBarElementContainer>
                                    <controls:CommandBarElementContainer.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="#ScheduleAdjustmentTabControl.SelectedIndex"
                                                     Converter="{x:Static ObjectConverters.Equal}">
                                                <Binding.ConverterParameter>
                                                    <system:Int32>0</system:Int32>
                                                </Binding.ConverterParameter>
                                            </Binding>
                                            <Binding Path="ViewModel.IsInScheduleSwappingMode"/>
                                        </MultiBinding>
                                    </controls:CommandBarElementContainer.IsVisible>
                                    <CheckBox
                                        IsEnabled="{Binding !ViewModel.ManagementService.Policy.DisableProfileClassPlanEditing}"
                                        IsChecked="{Binding ViewModel.IsTempSwapMode, Converter={StaticResource InvertBooleanConverter}}">
                                        永久换课
                                    </CheckBox>
                                </controls:CommandBarElementContainer>
                            </controls:CommandBar.PrimaryCommands>
                        </controls:CommandBar>

                        <ListBox Grid.Row="1" Grid.Column="0"
                                 ItemsSource="{Binding ViewModel.OrderedSchedules.List}"
                                 SelectedValue="{Binding ViewModel.ScheduleCalendarSelectedDate}"
                                 SelectedValueBinding="{Binding Key}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center">
                                            <Run
                                                Text="{Binding Key, Mode=OneWay, StringFormat={}{0:yy/MM/dd ddd}}" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <GridSplitter Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"
                                      VerticalAlignment="Stretch"
                                      Width="5"
                                      Margin="4 0"
                                      ResizeBehavior="PreviousAndNext"/>

                        <TabControl Grid.Row="1" Grid.Column="2" x:Name="ScheduleAdjustmentTabControl"
                                    SelectionChanged="ScheduleAdjustmentTabControl_OnSelectionChanged"
                                    TabStripPlacement="Bottom"
                                    Padding="0"
                                    Classes="compact">
                            <TabItem Header="{ci:FluentIcon &#xF0EB;}">
                                <Grid RowDefinitions="Auto,*,Auto">
                                    <StackPanel Grid.Row="0" Orientation="Horizontal"
                                                Spacing="4">
                                        <CalendarDatePicker
                                            SelectedDate="{Binding ViewModel.ScheduleCalendarSelectedDate}"
                                            Width="150"/>
                                        <Button Theme="{StaticResource TransparentButton}"
                                                Content="{ci:FluentIcon &#xE109;}"
                                                ToolTip.Tip="上一周"
                                                Click="ButtonPreviousWeek_OnClick"/>
                                        <Button Theme="{StaticResource TransparentButton}"
                                                Content="{ci:FluentIcon &#xE131;}"
                                                ToolTip.Tip="下一周"
                                                Click="ButtonNextWeek_OnClick"/>
                                        <TextBlock VerticalAlignment="Center"
                                                   Margin="4 0 0 0">
                                            <Run Text="第"/><Run Text="{Binding ViewModel.DataGridWeekRowsWeekIndex}"/><Run Text="周"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    
                                    <Border Background="#204169e1" 
                                            Grid.Row="2"
                                            IsVisible="{Binding ViewModel.IsInScheduleSwappingMode}">
                                        <Grid>
                                            <DockPanel Margin="8 4">
                                                <ci:FluentIcon Glyph="&#xE15F;"
                                                    Height="20" Width="20" FontSize="20"/>
                                                <TextBlock TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           Margin="4 0 0 0" >
                                                    <Run Text="正在交换课程。选择要与"/>
                                                    <Run Text="{Binding ViewModel.ClassSwapStartPosition, Mode=OneWay}"/>
                                                    <Run Text="交换的课程，然后点击【完成交换】。"/>
                                                </TextBlock>
                                            </DockPanel>
                                        </Grid>
                                    </Border>

                                    <DataGrid Grid.Row="1"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                              ItemsSource="{Binding ViewModel.WeekClassPlanRows, Mode=TwoWay}"
                                              CanUserSortColumns="False"
                                              CanUserReorderColumns="False"
                                              AutoGenerateColumns="False"
                                              CanUserResizeColumns="False"
                                              SelectionMode="Single"
                                              GridLinesVisibility="Horizontal"
                                              SelectedItem="{Binding ViewModel.SelectedWeekClassPlanRow}"
                                              PreparingCellForEdit="DataGridWeekSchedule_OnPreparingCellForEdit"
                                              BeginningEdit="DataGridWeekSchedule_OnBeginningEdit"
                                              scheduleDataGrid:ScheduleDataGridCellControl.Subjects="{Binding ViewModel.ProfileService.Profile.Subjects, Mode=OneWay}"
                                              x:Name="DataGridWeekSchedule">
                                        <DataGrid.Styles>
                                            <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
                                                <Setter Property="Fill" Value="{DynamicResource DataGridRowHoveredBackgroundColor}"/>
                                            </Style>
                                        </DataGrid.Styles>
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn Header="周日" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Sunday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="周一" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Monday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="周二" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Tuesday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="周三" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Wednesday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="周四" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Thursday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="周五" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Friday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="周六" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <scheduleDataGrid:ScheduleDataGridCellControl ClassInfo="{Binding Saturday}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>
                            <TabItem Header="{ci:FluentIcon &#xE304;}">
                                <controls1:ScheduleCalendarControl x:Name="ScheduleCalendarControl"
                                                                  DisplayDate="{Binding ViewModel.ScheduleCalendarSelectedDate, Mode=TwoWay}"
                                                                  SelectedDate="{Binding ViewModel.ScheduleCalendarSelectedDate, Mode=TwoWay}" />
                            </TabItem>
                        </TabControl>
                    </Grid>
                </TabItem>
                <TabItem Header="导入/导出" IsVisible="False">
                    <controls:NavigationView MenuItems="{Binding ViewModel.TransferNavigationViewItems, Mode=OneWay}"
                                             PaneDisplayMode="Left" 
                                             IsSettingsVisible="False"
                                             OpenPaneLength="280"
                                             x:Name="TransferNavigationView"
                                             ItemInvoked="TransferNavigationView_OnItemInvoked"
                                             IsEnabled="{Binding !ViewModel.IsTransferring}">
                        <controls:NavigationView.Resources>
                            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent"/>
                            <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent"/>
                        </controls:NavigationView.Resources>
                        <ci:Emptiable IsDirectContentMode="True"
                                      Data="{Binding ViewModel.SelectedTransferInfo}">
                            <Grid RowDefinitions="Auto, *, Auto, Auto">
                                <Grid Grid.Row="0" Margin="12 16 18 0" 
                                      IsVisible="{Binding !ViewModel.SelectedTransferInfo.HidePageTitle}"
                                      Classes.FullWidth="{Binding ViewModel.SelectedTransferInfo.UseFullWidth, TargetNullValue={x:False}, FallbackValue={x:False}}"
                                      x:Name="TitleContainer">
                                    <Grid.Styles>
                                        <Style Selector="Grid#TitleContainer:not(.FullWidth)">
                                            <Setter Property="MaxWidth" Value="{StaticResource SettingsContainerWidth}"/>
                                        </Style>
                                    </Grid.Styles>
                                    <TextBlock FontWeight="Normal"
                                               Text="{Binding ViewModel.SelectedTransferInfo.Name, FallbackValue=''}"
                                               Theme="{StaticResource TitleTextBlockStyle}"/>
                                </Grid>
                                <ContentPresenter Grid.Row="1" 
                                                  Content="{Binding ViewModel.TransferProviderContent}"/>
                                <Separator Grid.Row="2"/>
                                <Border Grid.Row="3" Padding="12">
                                    <Grid>
                                        <controls:ProgressRing Width="32" Height="32"
                                                               IsActive="{Binding ViewModel.IsTransferring}"
                                                               IsIndeterminate="True"
                                                               IsVisible="{Binding ViewModel.IsTransferring}"/>  
                                        <Button Classes="accent"
                                                Click="ButtonInvokeTransfer_OnClick"
                                                HorizontalAlignment="Right"
                                                Padding="32 6" >
                                            <Button.Content>
                                                <Binding Path="ViewModel.SelectedTransferInfo.Type"
                                                         Converter="{x:Static views:ProfileSettingsWindow.ProfileTransferProviderTypeToImportButtonTextConverter}">
                                                    <Binding.FallbackValue>
                                                        <profile1:ProfileTransferProviderType>None</profile1:ProfileTransferProviderType>
                                                    </Binding.FallbackValue>
                                                </Binding>
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </ci:Emptiable>
                    </controls:NavigationView>
                </TabItem>
            </TabControl>

            <!-- 信息栏 -->
            <controls:CommandBar Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" DefaultLabelPosition="Right">
                <controls:CommandBar.SecondaryCommands>
                    
                </controls:CommandBar.SecondaryCommands>
                <controls:CommandBar.PrimaryCommands>
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xe699;}"
                                               Label="{Binding ViewModel.ProfileService.CurrentProfilePath}"
                                               ToolTip.Tip="当前启用的档案"
                                               Click="ButtonOpenProfileManager_OnClick"/>
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xe6b1;}"
                                               Click="ButtonOpenTempClassPlans_OnClick"
                                               Label="{Binding ViewModel.LessonsService.CurrentClassPlan.Name, FallbackValue='（无）'}"
                                               ToolTip.Tip="启用临时课表"/>
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xe92f;}"
                                               Click="ButtonClassPlansGroup_OnClick"
                                               ToolTip.Tip="管理课表群"
                                               Label="{Binding Data.Name, Source={StaticResource ClassPlanGroupBindingProxy}, Mode=OneWay}"/>
                    <controls:CommandBarSeparator/>
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xf431;}"
                                               Label="不信任"
                                               Click="ButtonTrustProfile_OnClick"
                                               ToolTip.Tip="当前档案不受信任，部分功能受限。"
                                               IsVisible="{Binding ViewModel.ProfileService.IsCurrentProfileTrusted, Converter={StaticResource InvertBooleanConverter}}" />
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xeeb5;}"
                                               Label="保存"
                                               Click="ButtonSaveProfile_OnClick"
                                               ToolTip.Tip="保存当前档案文件。"/>
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xe68f;}"
                                               Label="导入/导出"
                                               Click="ButtonOpenProfileImportPage_OnClick"
                                               ToolTip.Tip="导入外部的课程信息，或导出当前的档案信息。"/>
                    <controls:CommandBarButton IconSource="{ci:FluentIconSource &#xee2f;}"
                                               Label="帮助"
                                               Click="ButtonHelp_OnClick"
                                               CommandParameter="https://docs.classisland.tech/app/profile/"
                                               ToolTip.Tip="查看档案编辑器帮助"/>
                </controls:CommandBar.PrimaryCommands>
            </controls:CommandBar>
        </Grid>
    </ci:DrawerHost>
</ci:MyWindow>
