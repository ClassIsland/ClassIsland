                                                            <Setter Property="BorderBrush"
                                                                    Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                                                            <Setter Property="Background"
                                                                    Value="{DynamicResource ControlFillColorTransparentBrush}" />

