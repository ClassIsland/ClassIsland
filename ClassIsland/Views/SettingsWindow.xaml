                                                    <ComboBoxItem Content="cn.ntp.org.cn"/>
                                                    <ComboBoxItem Content="pool.ntp.org"/>
                                                    <ComboBoxItem Content="time.windows.com"/>
                                                </ComboBox>
                                                
                                                <TextBlock Margin="0 6 0 0" Text="{Binding ExactTimeService.SyncStatusMessage}"
